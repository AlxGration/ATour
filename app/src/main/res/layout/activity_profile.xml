<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/Theme.ATour.AppBarOverlay">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="@dimen/padding"
            android:paddingEnd="@dimen/padding">
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:src="@drawable/ic_back"
                android:scaleType="centerInside"
                android:onClick="onClickBackBtn"
                android:background="@drawable/bg_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="@string/profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_back"/>

            <Button
                android:id="@+id/btn_sign_out"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                android:text="@string/sign_out"
                android:textColor="@color/red"
                android:textAllCaps="false"
                android:onClick="onClickSignOut"
                android:textSize="@dimen/sub_text_size"
                android:background="@drawable/bg_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="8dp">
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateOnly="true"
                    android:indeterminateTint="@color/black"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/tv_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorError"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_sec_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding"
                    android:layout_marginTop="@dimen/padding"
                    android:textColor="@color/black"
                    android:textSize="@dimen/huge_text_size"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_text_size"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_sec_name" />

                <ImageView
                    android:id="@+id/img_title_city"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="@dimen/padding"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_place"
                    app:tint="@color/grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"/>

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_text_size"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/img_title_city"
                    app:layout_constraintBottom_toBottomOf="@id/img_title_city"/>

                <TextView
                    android:id="@+id/tv_title_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:text="@string/email"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/mid_text_size"
                    app:layout_constraintTop_toBottomOf="@id/img_title_city"
                    app:layout_constraintStart_toStartOf="@id/img_title_city"/>

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:autoLink="email"
                    android:textColorLink="@color/yellow_dark"
                    android:textSize="@dimen/main_text_size"
                    app:layout_constraintStart_toStartOf="@id/tv_title_email"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_email"/>

                <TextView
                    android:id="@+id/tv_title_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:text="@string/phone"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/mid_text_size"
                    app:layout_constraintTop_toBottomOf="@id/tv_email"
                    app:layout_constraintStart_toStartOf="@id/tv_email"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textColorLink="@color/yellow_dark"
                    android:autoLink="phone"
                    android:textSize="@dimen/main_text_size"
                    app:layout_constraintStart_toStartOf="@id/tv_title_phone"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_phone"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_request"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding"
                    android:layout_marginEnd="@dimen/padding"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_phone">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/cg_types"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/cp_walk"
                            app:chipIcon="@drawable/ic_walk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Entry"
                            app:closeIconEnabled="false"
                            app:checkedIcon="@null"
                            app:chipIconTint="@color/black"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/grey_bg"
                            android:checkable="false"
                            android:visibility="gone"
                            android:text="@string/type_walk"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/cp_ski"
                            app:chipIcon="@drawable/ic_ski"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Entry"
                            app:closeIconEnabled="false"
                            app:checkedIcon="@null"
                            app:chipIconTint="@color/black"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/grey_bg"
                            android:checkable="false"
                            android:visibility="gone"
                            android:text="@string/type_ski"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/cp_hike"
                            app:chipIcon="@drawable/ic_hike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Entry"
                            app:closeIconEnabled="false"
                            app:checkedIcon="@null"
                            app:chipIconTint="@color/black"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/grey_bg"
                            android:checkable="false"
                            android:visibility="gone"
                            android:text="@string/type_hike"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/cp_water"
                            app:chipIcon="@drawable/ic_water"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Entry"
                            app:closeIconEnabled="false"
                            app:checkedIcon="@null"
                            app:chipIconTint="@color/black"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/grey_bg"
                            android:checkable="false"
                            android:visibility="gone"
                            android:text="@string/type_water"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/cp_speleo"
                            app:chipIcon="@drawable/ic_speleo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Entry"
                            app:closeIconEnabled="false"
                            app:checkedIcon="@null"
                            app:chipIconTint="@color/black"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/grey_bg"
                            android:checkable="false"
                            android:visibility="gone"
                            android:text="@string/type_speleo"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/cp_bike"
                            app:chipIcon="@drawable/ic_bike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Entry"
                            app:closeIconEnabled="false"
                            app:checkedIcon="@null"
                            app:chipIconTint="@color/black"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/grey_bg"
                            android:checkable="false"
                            android:visibility="gone"
                            android:text="@string/type_bike"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/cp_auto"
                            app:chipIcon="@drawable/ic_auto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Entry"
                            app:closeIconEnabled="false"
                            app:checkedIcon="@null"
                            app:chipIconTint="@color/black"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/grey_bg"
                            android:checkable="false"
                            android:visibility="gone"
                            android:text="@string/type_auto"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/cp_other"
                            app:chipIcon="@drawable/ic_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Entry"
                            app:closeIconEnabled="false"
                            app:checkedIcon="@null"
                            app:chipIconTint="@color/black"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/grey_bg"
                            android:checkable="false"
                            android:visibility="gone"
                            android:text="@string/type_other"/>

                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                        android:id="@+id/tv_title_request"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding"
                        android:text="@string/request"
                        android:textColor="@color/black"
                        android:textSize="@dimen/huge_text_size"
                        app:layout_constraintTop_toBottomOf="@id/cg_types"
                        app:layout_constraintStart_toStartOf="@id/cg_types"/>

                    <TextView
                        android:id="@+id/tv_title_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding"
                        android:text="@string/comment"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/mid_text_size"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_request"
                        app:layout_constraintStart_toStartOf="@id/tv_title_request"/>

                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/main_text_size"
                        app:layout_constraintStart_toStartOf="@id/tv_title_comment"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_comment"/>

                    <TextView
                        android:id="@+id/tv_title_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding"
                        android:text="@string/link"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/mid_text_size"
                        app:layout_constraintTop_toBottomOf="@id/tv_comment"
                        app:layout_constraintStart_toStartOf="@id/tv_comment"/>

                    <TextView
                        android:id="@+id/tv_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/main_text_size"
                        android:autoLink="web"
                        android:textColorLink="@color/yellow_dark"
                        app:layout_constraintStart_toStartOf="@id/tv_title_link"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_link"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="80dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_link"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/layout_estim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding"
                android:layout_marginEnd="@dimen/padding"
                android:visibility="invisible">
                <include layout="@layout/layout_estimation"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>