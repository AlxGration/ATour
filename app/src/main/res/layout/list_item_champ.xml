<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/li_size"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:text="МО Чемпионат урала и поволжья в г. Уфа"
        android:textColor="@color/black"
        android:textSize="@dimen/main_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_year"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title">
        <ImageView
            android:id="@+id/img_walk"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_walk"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            app:tint="@color/grey" />
        <ImageView
            android:id="@+id/img_ski"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_ski"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            app:tint="@color/grey" />
        <ImageView
            android:id="@+id/img_hike"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_hike"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            app:tint="@color/grey" />
        <ImageView
            android:id="@+id/img_water"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_water"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            app:tint="@color/grey" />
        <ImageView
            android:id="@+id/img_speleo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_speleo"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            app:tint="@color/grey" />
        <ImageView
            android:id="@+id/img_bike"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bike"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            app:tint="@color/grey" />
        <ImageView
            android:id="@+id/img_auto"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_auto"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            app:tint="@color/grey" />
        <ImageView
            android:id="@+id/img_other"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_other"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            app:tint="@color/grey" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="17dp"
        android:text="г. Уфа"
        android:textColor="@color/black"
        android:textSize="@dimen/main_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sub_text_size"
        android:textColor="@color/black"
        android:text="2021 г."
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_city"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>