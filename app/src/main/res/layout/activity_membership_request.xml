<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/Theme.ATour.AppBarOverlay">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="@dimen/padding"
            android:paddingEnd="@dimen/padding">
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:src="@drawable/ic_back"
                android:scaleType="centerInside"
                android:onClick="onClickBackBtn"
                android:background="@drawable/bg_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="@string/request"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_back"/>
            <ImageButton
                android:id="@+id/btn_ok"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:src="@drawable/ic_ok"
                android:scaleType="centerInside"
                android:onClick="onClickSendBtn"
                android:background="@drawable/bg_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:id="@+id/rg_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <RadioButton
                        android:id="@+id/rb_member"
                        android:layout_width="100dp"
                        android:layout_height="46dp"
                        android:textSize="@dimen/mid_text_size"
                        android:text="@string/member"
                        android:layout_marginRight="5dp"
                        android:checked="true"
                        android:gravity="center"
                        android:button="@android:color/transparent"
                        android:background="@drawable/bg_rb_left"
                        android:textColor="@color/text_radio_btn"/>
                    <RadioButton
                        android:id="@+id/rb_referee"
                        android:layout_width="100dp"
                        android:layout_height="46dp"
                        android:textSize="@dimen/mid_text_size"
                        android:text="@string/referee"
                        android:gravity="center"
                        android:button="@android:color/transparent"
                        android:background="@drawable/bg_rb_right"
                        android:textColor="@color/text_radio_btn"/>
                </RadioGroup>

                <TextView
                    android:id="@+id/tv_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorError"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/rg_role"
                    app:layout_constraintStart_toStartOf="@id/row_1"/>

                <TextView
                    android:id="@+id/tv_types"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/types"
                    android:textSize="@dimen/mid_text_size"
                    app:layout_constraintTop_toBottomOf="@id/tv_error"
                    app:layout_constraintStart_toStartOf="@id/row_1"/>

                <LinearLayout
                    android:id="@+id/row_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_types"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <CheckBox
                        android:id="@+id/cb_walk"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/sub_text_size"
                        android:button="@null"
                        android:drawableTint="@color/text_radio_btn"
                        android:drawableTop="@drawable/ic_eye"
                        android:background="@drawable/bg_toggle"
                        android:textColor="@color/text_radio_btn"
                        android:gravity="center_horizontal|bottom"
                        android:onClick="onChooseType"
                        android:textAlignment="gravity"
                        android:text="@string/type_walk"
                        android:checked="false" />
                    <CheckBox
                        android:id="@+id/cb_ski"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/sub_text_size"
                        android:button="@null"
                        android:drawableTint="@color/text_radio_btn"
                        android:drawableTop="@drawable/ic_eye"
                        android:background="@drawable/bg_toggle"
                        android:textColor="@color/text_radio_btn"
                        android:gravity="center_horizontal|bottom"
                        android:onClick="onChooseType"
                        android:textAlignment="gravity"
                        android:text="@string/type_ski"
                        android:checked="false" />
                    <CheckBox
                        android:id="@+id/cb_hike"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/sub_text_size"
                        android:button="@null"
                        android:drawableTint="@color/text_radio_btn"
                        android:drawableTop="@drawable/ic_eye"
                        android:background="@drawable/bg_toggle"
                        android:textColor="@color/text_radio_btn"
                        android:gravity="center_horizontal|bottom"
                        android:onClick="onChooseType"
                        android:textAlignment="gravity"
                        android:text="@string/type_hike"
                        android:checked="false" />
                    <CheckBox
                        android:id="@+id/cb_water"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:textSize="@dimen/sub_text_size"
                        android:button="@null"
                        android:drawableTint="@color/text_radio_btn"
                        android:drawableTop="@drawable/ic_eye"
                        android:background="@drawable/bg_toggle"
                        android:textColor="@color/text_radio_btn"
                        android:gravity="center_horizontal|bottom"
                        android:onClick="onChooseType"
                        android:textAlignment="gravity"
                        android:text="@string/type_water"
                        android:checked="false" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/row_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/row_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <CheckBox
                        android:id="@+id/cb_speleo"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/sub_text_size"
                        android:button="@null"
                        android:drawableTint="@color/text_radio_btn"
                        android:drawableTop="@drawable/ic_eye"
                        android:background="@drawable/bg_toggle"
                        android:textColor="@color/text_radio_btn"
                        android:gravity="center_horizontal|bottom"
                        android:onClick="onChooseType"
                        android:textAlignment="gravity"
                        android:text="@string/type_speleo"
                        android:checked="false" />
                    <CheckBox
                        android:id="@+id/cb_bike"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/sub_text_size"
                        android:button="@null"
                        android:drawableTint="@color/text_radio_btn"
                        android:drawableTop="@drawable/ic_eye"
                        android:background="@drawable/bg_toggle"
                        android:textColor="@color/text_radio_btn"
                        android:gravity="center_horizontal|bottom"
                        android:onClick="onChooseType"
                        android:textAlignment="gravity"
                        android:text="@string/type_bike"
                        android:checked="false" />
                    <CheckBox
                        android:id="@+id/cb_auto"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/sub_text_size"
                        android:button="@null"
                        android:drawableTint="@color/text_radio_btn"
                        android:drawableTop="@drawable/ic_eye"
                        android:background="@drawable/bg_toggle"
                        android:textColor="@color/text_radio_btn"
                        android:gravity="center_horizontal|bottom"
                        android:onClick="onChooseType"
                        android:textAlignment="gravity"
                        android:text="@string/type_auto"
                        android:checked="false" />
                    <CheckBox
                        android:id="@+id/cb_other"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:textSize="@dimen/sub_text_size"
                        android:button="@null"
                        android:drawableTint="@color/text_radio_btn"
                        android:drawableTop="@drawable/ic_eye"
                        android:background="@drawable/bg_toggle"
                        android:textColor="@color/text_radio_btn"
                        android:gravity="center_horizontal|bottom"
                        android:onClick="onChooseType"
                        android:textAlignment="gravity"
                        android:text="@string/type_other"
                        android:checked="false" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="13"
                    android:hint="@string/comment"
                    android:inputType="textMultiLine"

                    app:layout_constraintTop_toBottomOf="@id/row_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/et_link"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/mid_text_size"
                    android:hint="@string/link"
                    android:inputType="textMultiLine"
                    app:layout_constraintTop_toBottomOf="@id/et_comment"
                    app:layout_constraintStart_toStartOf="@id/et_comment"
                    app:layout_constraintEnd_toEndOf="@id/et_comment"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    style="@style/BlackButton"
                    android:text="@string/send"
                    android:onClick="onClickSendBtn"
                    app:layout_constraintTop_toBottomOf="@id/et_link"
                    app:layout_constraintStart_toStartOf="@id/et_link"
                    app:layout_constraintEnd_toEndOf="@id/et_link"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>