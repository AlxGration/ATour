<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:drawable="@drawable/ic_down_arrow">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="@dimen/mid_radius"/>
            <solid android:color="@color/black"/>
        </shape>
    </item>
    <item android:state_checked="false" android:drawable="@drawable/ic_up_arrow">
        <shape
            android:shape="rectangle">
            <corners android:radius="@dimen/mid_radius"/>
            <solid android:color="@color/grey_bg"/>
        </shape>
    </item>
</selector>